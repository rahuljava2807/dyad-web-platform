# Dyad Web Platform Environment Variables

# ======================
# Application Settings
# ======================
NODE_ENV=production
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://dyad_user:dyad_secure_password@localhost:5432/dyad_platform
POSTGRES_PASSWORD=dyad_secure_password

# ======================
# Redis Configuration
# ======================
REDIS_URL=redis://:redis_secure_password@localhost:6379
REDIS_PASSWORD=redis_secure_password

# ======================
# Authentication
# ======================
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_super_secure_nextauth_secret_here_min_32_chars

# ======================
# OAuth Providers (Optional)
# ======================

# Azure AD
AZURE_AD_CLIENT_ID=your_azure_ad_client_id
AZURE_AD_CLIENT_SECRET=your_azure_ad_client_secret
AZURE_AD_TENANT_ID=your_azure_ad_tenant_id

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ======================
# AI Provider API Keys
# ======================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Groq (Optional)
GROQ_API_KEY=your_groq_api_key_here

# Mistral (Optional)
MISTRAL_API_KEY=your_mistral_api_key_here

# ======================
# Yavi.ai Integration
# ======================
YAVI_API_URL=https://api.yavi.ai
YAVI_API_KEY=your_yavi_api_key_here

# ======================
# Azure Storage
# ======================
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
AZURE_STORAGE_CONTAINER_NAME=dyad-files

# Alternative: Azure Storage Connection String
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# ======================
# Email Configuration (Optional)
# ======================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
FROM_EMAIL=noreply@dyad.ai

# Alternative: Use AWS SES
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# ======================
# Monitoring & Analytics (Optional)
# ======================

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_frontend_sentry_dsn

# Grafana
GRAFANA_PASSWORD=secure_grafana_password

# ======================
# Security Settings
# ======================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://dyad.ai,https://app.dyad.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window
AI_RATE_LIMIT_MAX_REQUESTS=10  # AI requests per minute

# Session Configuration
SESSION_MAX_AGE=86400  # 24 hours in seconds

# ======================
# Feature Flags
# ======================
ENABLE_TELEMETRY=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_YAVI_INTEGRATION=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_AI_CONTENT_MODERATION=true

# ======================
# Development Settings
# ======================

# Enable debug logging
DEBUG=dyad:*

# Skip authentication in development (DANGEROUS - never use in production)
# SKIP_AUTH=true

# Mock external services in development
# MOCK_AI_SERVICES=true
# MOCK_YAVI_SERVICE=true
# MOCK_EMAIL_SERVICE=true

# ======================
# Production Settings
# ======================

# CDN Configuration
CDN_URL=https://cdn.dyad.ai

# Load Balancer Health Check
HEALTH_CHECK_PATH=/health

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=dyad-backups

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/dyad.pem
SSL_KEY_PATH=/etc/ssl/private/dyad.key

# ======================
# Container Settings
# ======================

# Memory Limits (for Docker)
NODE_OPTIONS=--max_old_space_size=4096

# Timezone
TZ=UTC

# User/Group IDs for Docker
PUID=1001
PGID=1001