{
  "name": "dyad-web-platform",
  "version": "1.0.0",
  "description": "Cloud-native web platform for AI app development with Yavi.ai integration",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:shared": "cd shared && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "npm run test:all -- --ci",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "db:generate": "cd backend && npx prisma generate",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:deploy": "cd backend && npx prisma migrate deploy",
    "db:reset": "cd backend && npx prisma migrate reset",
    "db:seed": "cd backend && npx prisma db seed",
    "docker:build": "docker build -t dyad-web-platform .",
    "docker:run": "docker run -p 3000:3000 -p 8000:8000 dyad-web-platform",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "deploy:staging": "npm run build && npm run deploy:azure:staging",
    "deploy:production": "npm run build && npm run deploy:azure:production",
    "deploy:azure:staging": "az webapp deploy --resource-group dyad-staging --name dyad-web-staging --src-path ./dist",
    "deploy:azure:production": "az webapp deploy --resource-group dyad-prod --name dyad-web-prod --src-path ./dist",
    "scale:web": "az webapp scale --resource-group dyad-prod --name dyad-web-prod --instance-count",
    "logs:frontend": "cd frontend && npm run logs",
    "logs:backend": "cd backend && npm run logs",
    "clean": "rimraf node_modules frontend/node_modules backend/node_modules shared/node_modules",
    "reset": "npm run clean && npm install",
    "setup": "npm install && npm run db:generate && npm run db:migrate && npm run db:seed",
    "health": "curl -f http://localhost:8000/health && curl -f http://localhost:3000/api/health"
  },
  "keywords": [
    "ai",
    "app-builder",
    "web-platform",
    "nextjs",
    "express",
    "typescript",
    "yavi",
    "document-processing"
  ],
  "author": {
    "name": "Nimbusnext Inc",
    "email": "support@yavi.ai",
    "url": "https://yavi.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nimbusnext/dyad-web-platform.git"
  },
  "bugs": {
    "url": "https://github.com/nimbusnext/dyad-web-platform/issues"
  },
  "homepage": "https://dyad.ai",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  }
}